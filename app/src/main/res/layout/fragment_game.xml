<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/fragment_game"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <!--Table Layout with 3 rows and each row with 3 buttons-->
    <TableLayout
            android:id="@+id/glGameBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/counterTextView"
            android:rowCount="3"
            android:columnCount="3"
            android:padding="8dp"
    >

        <!--Row 1-->
        <TableRow>

            <Button
                    android:id="@+id/button1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:tag="1"
                    android:layout_margin="8dp"
                    style="@style/Widget.AppCompat.Button"
            />

            <Button
                    android:id="@+id/button2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:tag="2"
                    android:layout_margin="8dp"
                    style="@style/Widget.AppCompat.Button"
            />

            <Button
                    android:id="@+id/button3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:tag="3"
                    android:layout_margin="8dp"
                    style="@style/Widget.AppCompat.Button"
            />

        </TableRow>

        <!--Row 2-->
        <TableRow>

            <Button
                    android:id="@+id/button4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:tag="4"
                    android:layout_margin="8dp"
                    style="@style/Widget.AppCompat.Button"
            />

            <Button
                    android:id="@+id/button5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:tag="5"
                    android:layout_margin="8dp"
                    style="@style/Widget.AppCompat.Button"
            />

            <Button
                    android:id="@+id/button6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:tag="6"
                    android:layout_margin="8dp"
                    style="@style/Widget.AppCompat.Button"
            />

        </TableRow>

        <!--Row 3-->
        <TableRow>

            <Button
                    android:id="@+id/button7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:tag="7"
                    android:layout_margin="8dp"
                    style="@style/Widget.AppCompat.Button"
            />

            <Button
                    android:id="@+id/button8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:tag="8"
                    android:layout_margin="8dp"
                    style="@style/Widget.AppCompat.Button"
            />

            <Button
                    android:id="@+id/button9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:textSize="22sp"
                    android:textColor="#FFFFFF"
                    android:background="@color/colorAccent"
                    android:gravity="center"
                    android:tag="9"
                    android:layout_margin="8dp"
                    style="@style/Widget.AppCompat.Button"
            />

        </TableRow>

    </TableLayout>

    <!--TextView to show user turns and winner-->
    <TextView
            android:id="@+id/counterTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#424242"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:padding="8dp"
    />

    <!--Button to reset game board-->
    <Button
            android:id="@+id/buttonReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/glGameBoard"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:text="@string/reset_button"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@color/colorPrimary"
    />

</RelativeLayout>